<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="grupo.unoeste.simuladorlfa.AutomatonController">
    <center>
        <Pane fx:id="drawingPane" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-width: 2;">
            <cursor>
                <javafx.scene.Cursor fx:constant="CROSSHAIR" />
            </cursor>
        </Pane>
    </center>
    <right>
        <VBox fx:id="controlPanel" prefWidth="300.0" spacing="10.0" style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-border-color: #dee2e6; -fx-border-width: 0 0 0 2;">
            <children>
                <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Simulador de Autômatos" />

                <Separator />

                <Label style="-fx-font-size: 14; -fx-font-weight: bold;" text="Testar Palavra:" />
                <TextField fx:id="wordTextField" promptText="Digite a palavra para testar..." style="-fx-font-size: 14;" />

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="simulateButton" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;" text="Simular" />
                        <Button fx:id="clearButton" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold;" text="Limpar Tudo" />
                    </children>
                </HBox>

                <Label fx:id="resultLabel" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-wrap-text: true;" wrapText="true" />

                <Separator />

                <Label style="-fx-font-size: 14; -fx-font-weight: bold;" text="Log de Atividades:" />
                <TextArea fx:id="logTextArea" editable="false" prefHeight="200.0" style="-fx-font-family: 'Consolas', 'Monaco', monospace; -fx-font-size: 11;" wrapText="true" />

                <Separator />

                <Label style="-fx-font-size: 12; -fx-font-weight: bold;" text="Como usar:" />
                <Label style="-fx-font-size: 11; -fx-wrap-text: true;" text="• Clique no painel para criar estados" wrapText="true" />
                <Label style="-fx-font-size: 11; -fx-wrap-text: true;" text="• Arraste entre estados para criar transições" wrapText="true" />
                <Label style="-fx-font-size: 11; -fx-wrap-text: true;" text="• Clique direito nos elementos para mais opções" wrapText="true" />
                <Label style="-fx-font-size: 11; -fx-wrap-text: true;" text="• Use ε para transições epsilon" wrapText="true" />
            </children>
        </VBox>
    </right>
</BorderPane>