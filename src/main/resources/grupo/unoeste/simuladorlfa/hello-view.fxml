<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="grupo.unoeste.simuladorlfa.AutomatonController">
    <center>
        <Pane fx:id="drawingPane" prefHeight="691.0" prefWidth="300.0" style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-width: 1px;" />
    </center>
    <right>
        <VBox fx:id="controlPanel" maxWidth="420.0" minWidth="353.0" prefHeight="691.0" prefWidth="353.0" spacing="10.0" style="-fx-background-color: #f5f5f5; -fx-padding: 15;">
            <children>
                <Label text="Simulador de Autômatos Finitos" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>

                <VBox spacing="5.0" style="-fx-background-color: white; -fx-padding: 10; -fx-border-color: #dddddd; -fx-border-width: 1px; -fx-border-radius: 5px;">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Informações do Autômato:" />
                        <Label fx:id="automatonTypeLabel" text="Tipo: Nenhum autômato" />
                        <HBox spacing="10.0">
                            <children>
                                <Button onAction="#showAutomatonInfo" text="Analisar" />
                                <Button onAction="#exportAutomaton" text="Exportar" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <Separator />

                <VBox spacing="5.0">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Palavra(s) para simular:" />
                        <TextField fx:id="wordTextField" promptText="Digite a palavra ou palavras separadas por vírgula" />
                        <Label style="-fx-font-size: 10px; -fx-text-fill: #666666;" text="Dica: Use vírgulas para testar múltiplas palavras" />
                    </children>
                </VBox>

                <VBox spacing="5.0">
                    <children>
                        <Button fx:id="simulateButton" maxWidth="Infinity" onAction="#simulateWord" prefHeight="35.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Simular Palavra(s)" />
                        <Button fx:id="stepByStepButton" maxWidth="Infinity" onAction="#startStepByStepSimulation" prefHeight="35.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;" text="Simulação Passo a Passo" />
                    </children>
                </VBox>

                <HBox fx:id="stepControlPanel" spacing="3.0" style="-fx-background-color: #e3f2fd; -fx-padding: 10; -fx-border-color: #2196F3; -fx-border-width: 1px; -fx-border-radius: 5px;" visible="false">
                    <children>
                        <Label fx:id="stepInfoLabel" text="" wrapText="true" />
                        <HBox spacing="5.0">
                            <children>
                                <Button fx:id="prevStepButton" onAction="#prevStep" text="◀" />
                                <Button fx:id="nextStepButton" onAction="#nextStep" text="▶" />
                                <Button fx:id="resetStepButton" onAction="#resetStepByStep" text="X" />
                            </children>
                        </HBox>
                    </children>
                </HBox>

                <VBox spacing="5.0">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Resultado:" />
                        <Label fx:id="resultLabel" text="" wrapText="true" />
                    </children>
                </VBox>

                <Separator />

                <VBox spacing="5.0">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Opções de Visualização:" />
                        <CheckBox fx:id="showEpsilonTransitionsCheckBox" selected="true" text="Mostrar transições ε" />
                    </children>
                </VBox>

                <Button fx:id="clearButton" maxWidth="Infinity" onAction="#clearAll" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Limpar Tudo" />

                <Separator />

                <VBox prefWidth="390.0" spacing="5.0">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Instruções:" />
                        <Label text="• Clique no painel para criar estados" wrapText="true" />
                        <Label text="• Arraste entre estados para criar transições" wrapText="true" />
                        <Label text="• Clique direito para opções" wrapText="true" />
                        <Label text="• Use 'a,b,c' para múltiplos símbolos" wrapText="true" />
                        <Label text="• Campo vazio = transição ε" wrapText="true" />
                    </children>
                </VBox>
            </children>
        </VBox>
    </right>
    <bottom>
        <VBox prefHeight="181.0" prefWidth="1154.0">
            <children>
                <!-- Log da Simulação -->
                <Label style="-fx-font-weight: bold; -fx-padding: 5 0 0 10;" text="Log da Simulação:" />
                <TextArea fx:id="logTextArea" editable="false" prefHeight="150.0" style="-fx-font-family: 'Consolas', 'Monaco', monospace; -fx-font-size: 11px;" wrapText="true">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" />
                    </VBox.margin>
                </TextArea>
            </children>
        </VBox>
    </bottom>
</BorderPane>
